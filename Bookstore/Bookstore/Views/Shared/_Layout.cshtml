<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Seneca Online Bookstore</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/fontawesome")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body class="mt-3">
    <div class="Navbar navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
        <div class="NavContainer container">
            <div class="NavbarBrand navbar-brand">
                @Html.ActionLink("Seneca Bookstore", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div><!--/.NavbarBrand-->

            <button class="NavbarToggler navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="navbar-toggler-icon"></span>
            </button><!--/.NavbarToggler-->

            <div class="NavbarCollapse navbar-collapse collapse">
                <ul class="InnerLinks ml-auto navbar-nav">
                    <li class="Link nav-item">@Html.ActionLink("Books", "Index", "Books", null, new { @class = "nav-link" })</li><!--.Link/-->
                    <li class="Link nav-item">@Html.ActionLink("Authors", "Index", "Authors", null, new { @class = "nav-link" })</li><!--.Link/-->
                    <li class="Link nav-item">@Html.ActionLink("Genres", "Index", "Genres", null, new { @class = "nav-link" })</li><!--.Link/-->
                </ul><!--/.InnerLinks-->
            </div><!--/.NavbarCollapse-->
        </div><!--/.NavContainer-->
    </div><!--/.Navbar-->

    <div class="Render container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Seneca Online Bookstore</p>
        </footer>
    </div><!--/.Render-->

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

    <script class="SortByScript">
        function SortBy() {
            window.location.href = document.getElementById("UrlList").value;
        }
    </script><!--/.SortByScript-->
</body>
</html>
