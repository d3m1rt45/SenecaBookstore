@model IEnumerable<Bookstore.Models.Genre>

@{
    ViewBag.Title = "Genres";
}

<!--PageHead-->
<div class="d-flex pt-4 mb-2 pb-0 justify-content-between align-items-center">

    <!--Header-->
    <h2 class="d-block align-self-start font-weight-bold mb-0 pb-0">Genres</h2>

    <!--SortBy-->
    <select class="btn btn-outline-dark bg-white text-dark p-1" id="UrlList" onchange="SortBy()">
        <option value="@Url.Action("Index", "Genres", null)">Sort by...</option>
        <option value="@Url.Action("Index", "Genres", new { order = "AtoZ" })">Title (a-z)</option>
        <option value="@Url.Action("Index", "Genres", new { order = "ZtoA" })">Title (z-a)</option>
    </select>
    <script>
        function SortBy() {
            window.location.href = document.getElementById("UrlList").value;
        }
    </script>
</div>

<div class="d-flex justify-content-between align-items-center">
    <!--Map-->
    <h5 class="font-italic my-0 py-0">
        @Html.ActionLink("Home", "Index", "Home", null, null) /
        Genres
    </h5>

    <!--SearchBar-->
    <div class="d-inline-block align-self-start">
        @using (Html.BeginForm())
        {
            <div class="input-group">
                @Html.TextBox("search", null, new { @class = "form-control text-dark ", placeholder = "Search..." })
                <div class="input-group-prepend">
                    <button class="btn btn-dark rounded hvr-grow-shadow" type="submit"><i class="fa fa-search"></i></button>
                </div>
            </div>
        }
    </div>

</div>

<hr />

<div class="row">
    @foreach (var item in Model)
    {
        <h5 class="mb-3 col-12 col-sm-6 col-lg-4">@Html.ActionLink(item.Name, "ByGenre", "Books", new { role = item.Name }, null)</h5>
    }
</div>