@model IEnumerable<Bookstore.Models.Book>

@{
    ViewBag.Title = "Index";
}

<div class="row mt-3">
    <h2 class="col-10 mb-0">All Titles</h2>
    <p class="col-2 text-right align-self-end mb-0"> @Html.ActionLink("Create New", "Create") </p>
</div>

<hr />

<div class="container">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-6 col-md-4 col-lg-3 col-xl-2 my-3 d-flex align-items-stretch">
                <div class="card w-100 bg-light hvr-grow-shadow">
                    <a class="stretched-link card-link text-dark" href="/Books/ByISBN?role=@item.ISBN">
                        <img class="card-img-top w-100" src="~/Images/@item.ImagePath" alt="Book cover" />
                        <div class="card-body d-flex flex-column text-center">
                            @if (item.Title.Length > 11)
                            {
                                <p class="card-title font-weight-bold">@item.Title.Substring(0, 11)...</p>
                            }
                            @if (item.Title.Length <= 11)
                            {
                                <p class="card-title font-weight-bold">@item.Title</p>
                            }
                            @if (item.AuthorName.Length > 12)
                            {
                                <p class="card-text">@item.AuthorName.Substring(0, 12)...</p>
                            }
                            @if (item.AuthorName.Length <= 12)
                            {
                                <p class="card-text">@item.AuthorName</p>
                            }
                        </div>
                    </a>
                </div>
            </div>
        }
    </div>
</div>