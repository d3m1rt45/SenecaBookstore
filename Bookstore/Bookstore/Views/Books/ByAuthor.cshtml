@model Bookstore.ViewModels.ByAuthorViewModel

@{
    var thisAuthor = Model.Author;
    ViewBag.Title = thisAuthor;
}

<!--PageHead-->
<div class="row pt-4">
    <div class="col-6 text-left">
        <!--Header-->
        <h2 class="d-block align-self-start font-weight-bold mb-0 pb-0">@thisAuthor</h2>

        <!--Map-->
        <p class="map font-italic my-0 py-0">
            @Html.ActionLink("Home", "Index", "Home", null, null) /
            @Html.ActionLink("Authors", "Index", "Authors", null, null) /
            @thisAuthor
        </p>
    </div>
    <div class="col-6 text-right">
        <!--SearchBar-->
        <div class="d-inline-block pt-2">
            @using (Html.BeginForm())
            {
                <div class="input-group">
                    @Html.TextBox("search", null, new { @class = "form-control text-dark", placeholder = "Search..." })
                    <div class="input-group-prepend">
                        <button class="btn btn-dark rounded hvr-grow-shadow" type="submit"><i class="fa fa-search"></i></button>
                    </div>
                </div>
            }
        </div>

        <!--SortBy-->
        <select class="btn btn-outline-dark bg-white text-dark p-2 mb-1" id="UrlList" onchange="SortBy()">
            <option value="@Url.Action("ByAuthor", "Books", new { authorName = thisAuthor })">Sort by...</option>
            <option value="@Url.Action("ByAuthor", "Books", new { authorName = thisAuthor, order = "AtoZ" })">Title (a-z)</option>
            <option value="@Url.Action("ByAuthor", "Books", new { authorName = thisAuthor, order = "ZtoA" })">Title (z-a)</option>
        </select>
        <script>
            function SortBy() {
                window.location.href = document.getElementById("UrlList").value;
            }
        </script>
    </div>
</div>

<hr />

<div class="row">
    @foreach (var item in Model.BookCards)
    {
        <div class="col-6 col-md-4 col-lg-3 col-xl-2 my-3 d-flex align-items-stretch">
            <div class="card w-100 bg-light hvr-grow-rotate">
                <a class="stretched-link card-link text-dark" href="/Books/ByISBN?role=@item.ISBN">
                    <img class="card-img-top w-100" src="~/Images/@item.ImagePath" alt="Book cover" />
                    <div class="card-body d-flex flex-column text-center">
                        <p class="card-title font-weight-bold py-0 my-0">@item.Title</p>
                        <p class="card-text py-0 my-0">@item.AuthorName</p>
                        <p class="card-text font-weight-bold py-0 my-0">£@item.Price</p>
                    </div>
                </a>
            </div>
        </div>
    }
</div>