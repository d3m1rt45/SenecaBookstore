@model Bookstore.Models.Book

@{
    ViewBag.Title = Model.Title;

    var printTitle = Model.Title;
    if (Model.Title.Length > 20)
    {
        printTitle = printTitle.Substring(0, 20) + "...";
    }
}

<section class="Books-ByISBN text-light">

    <article class="PageHead bg-dark d-flex pt-4 pr-3 justify-content-between align-items-center">
        <div class="Left align-self-start">
            <h2 class="Header text-light d-block font-weight-bold mb-0 pb-0">
                @printTitle
            </h2><!--/.Header-->
            <p class="Map mt-0 mb-1 pt-0">
                <!--BookAuthor-->
                by @Model.AuthorName
            </p><!--/.Map-->
        </div><!--/.Left-->
        <div class="Right">
            <p class="Map ByGenre font-italic my-0 py-0 text-right">
                @Html.ActionLink("Home", "Index", "Home", null, null) /
                @Html.ActionLink("Genres", "Index", "Genres", null, null) /
                @Html.ActionLink(Model.GenreName, "ByGenre", "Books", new { genreName = Model.GenreName }, null) /
                @printTitle
            </p><!--/.Map.ByGenre-->

            <p class="Map ByAuthor font-italic my-0 py-0 text-right">
                @Html.ActionLink("Home", "Index", "Home", null, null) /
                @Html.ActionLink("Authors", "Index", "Authors", null, null) /
                @Html.ActionLink(Model.AuthorName, "ByAuthor", "Books", new { authorName = Model.AuthorName }, null) /
                @printTitle
            </p><!--/.Map.ByAuthor-->
        </div><!--/.Right-->
    </article><!--/.PageHead-->

    <hr /><!--Head/Body-Divider-->

    <dl class="BodyContainer bg-dark rounded dl-horizontal">
        <article class="PageBody row">
            <div class="Left col-4 pt-3 pb-4">
                <img style="width:100%" src="~/Images/@Model.ImagePath" /><!--.Image/-->
                <button class="Purchase d-block btn-light font-weight-bold h4 text-uppercase text-black py-2 px-3 hvr-grow rounded">
                    💰 Purchase
                </button><!--.PurchaseButton/-->
            </div><!--/.ImageContainer-->
            <div class="Info col-8 pt-3">
                <h4 class="Title text-light">@Html.DisplayFor(x => x.Title)</h4><!--.Title/-->
                <span class="Description lead mb-3">
                    @Html.DisplayFor(model => model.Description)
                </span><!--/.Description-->
                <div class="Inner row mt-4" style="font-family:Merriweather;">
                    <div class="Left col-4">
                        <dt> Author </dt>
                        <dd> @Html.DisplayFor(model => model.AuthorName)</dd>
                        <dt> Genre </dt>
                        <dd> @Html.ActionLink(Model.GenreName, "ByGenre", "Books", new { genreName = Model.GenreName }, null) </a> </dd>
                        <dt> Publisher </dt>
                        <dd> @Html.DisplayFor(model => model.Publisher) </dd>
                        <dt> Format </dt>
                        <dd> @Html.DisplayFor(model => model.Format) </dd>
                    </div><!--/.Left-->
                    <div class="Right col-4 offset-1">
                        <dt> Price </dt>
                        <dd> @Html.DisplayFor(model => model.Price) </dd>
                        <dt> Pages </dt>
                        <dd> @Html.DisplayFor(model => model.NumberOfPages) </dd>
                        <dt> Weight</dt>
                        <dd> @Html.DisplayFor(model => model.WeightInGrams)g </dd>
                        <dt> Dimensions</dt>
                        <dd> @Html.DisplayFor(model => model.HeightInMm) x @Html.DisplayFor(model => model.WidthInMm) mm </dd>
                    </div><!--/.Right-->
                </div><!--/.Inner-->
            </div><!--/.Info-->
        </article><!--/.PageBdy-->
    </dl><!--/.BodyContainer-->

</section><!--/.Books-ByISBN-->
