@model Bookstore.Models.Book

@{
    ViewBag.Title = Model.Title;

    var printTitle = Model.Title;
    if (Model.Title.Length > 20)
    {
        printTitle = printTitle.Substring(0, 20) + "...";
    }
}

<div class="d-flex pt-4 mb-2 pb-0 justify-content-between align-items-center"><!--PageHead-->
    <div class="align-self-start"><!--LeftColumn-->

        <h2 class="d-block font-weight-bold mb-0 pb-0"><!--BookName-->
            @printTitle
        </h2><!--/BookName-->

        <p class="map my-0 py-0"><!--BookAuthor-->
            by @Model.AuthorName
        </p><!--/BookAuthor-->

    </div><!--/LeftColumn-->
    <div><!--RightColumn-->

        <p class="map font-italic my-0 py-0 text-right"><!--MapByGenre-->
            @Html.ActionLink("Home", "Index", "Home", null, null) /
            @Html.ActionLink("Genres", "Index", "Genres", null, null) /
            @Html.ActionLink(Model.GenreName, "ByGenre", "Books", new { genreName = Model.GenreName }, null) /
            @printTitle
        </p><!--/MapByGenre-->

        <p class="map font-italic my-0 py-0 text-right"><!--MapByAuthor-->
            @Html.ActionLink("Home", "Index", "Home", null, null) /
            @Html.ActionLink("Authors", "Index", "Authors", null, null) /
            @Html.ActionLink(Model.AuthorName, "ByAuthor", "Books", new { authorName = Model.AuthorName }, null) /
            @printTitle
        </p><!--/MapByAuthor-->

    </div><!--/RightColumn-->
</div><!--/PageHead-->

<hr />

<dl class="dl-horizontal"><!--PageBody-->
    <div class="row"><!--Row-->
        <div class="col-3 offset-1"><!--ImageContainer-->

            <img class="mt-5" style="width:100%" src="~/Images/@Model.ImagePath" /><!--Image/-->

        </div><!--/ImageContainer-->
        <div class="col-5 offset-1"><!--Column-->
            <div class="row"><!--NestedRow-->
                <h2 class="col-12 mt-2 pb-2"><!--Column:Header-->

                    @Html.DisplayFor(model => model.Title)<!--BookTitle-->

                </h2><!--/Column:Header-->
                <div class="col-8"><!--Column:MetaData-->
                    <dt> Author </dt>
                    <dd> @Html.ActionLink(Model.AuthorName, "ByAuthor", "Books", new { authorName = Model.AuthorName }, null) <br /> </dd>

                    <dt> Genre </dt>
                    <dd> @Html.ActionLink(Model.GenreName, "ByGenre", "Books", new { genreName = Model.GenreName }, null) </a> </dd>

                    <dt> Price </dt>
                    <dd> @Html.DisplayFor(model => model.Price) </dd>

                    <dt> Publisher </dt>
                    <dd> @Html.DisplayFor(model => model.Publisher) </dd>

                    <dt> Pages </dt>
                    <dd> @Html.DisplayFor(model => model.NumberOfPages) </dd>

                    <dt> Format </dt>
                    <dd> @Html.DisplayFor(model => model.Format) </dd>

                    <dt> Weight</dt>
                    <dd> @Html.DisplayFor(model => model.WeightInGrams)g </dd>

                    <dt> Dimensions</dt>
                    <dd> @Html.DisplayFor(model => model.HeightInMm) x @Html.DisplayFor(model => model.WidthInMm) mm </dd>
                </div><!--Column:MetaData-->
                <div class="col-3 d-flex flex-column-reverse align-items-end"><!--Column:Buttons-->

                    <input type="button" value="Back" 
                           class="btn-dark font-weight-bold text-uppercase text-black my-2 ml-4 py-2 w-100" onclick="history.back()" /><!--Button:Back/-->

                    <input type="button" value="Purchase" 
                           class="btn-warning font-weight-bold text-uppercase text-black ml-4 py-2 w-100" /><!--Button:Purchase/-->

                </div><!--/Column:Buttons-->
            </div><!--/NestedRow-->
        </div><!--/Column-->
        <div class="my-5 col-10 offset-1"><!--Column-->
            
            <dd class="map"><!--Description-->
                @Html.DisplayFor(model => model.Description)
            </dd><!--Description-->

        </div><!--Column-->
    </div><!--/Row-->
</dl><!--/PageBody-->
