@model IEnumerable<Bookstore.Models.Book>

@{
    ViewBag.Title = "Home Page";

    Bookstore.Models.Book[][] genres = new Bookstore.Models.Book[5][];

    genres[0] = Model.Take(4).ToArray();
    genres[1] = Model.Where(x => x.GenreName == "Philosophy").Take(6).ToArray();
    genres[2] = Model.Where(x => x.GenreName == "Business, Finance and Law").Take(6).ToArray();
    genres[3] = Model.Where(x => x.GenreName == "Crime and Mystery").Take(6).ToArray();
    genres[4] = Model.Where(x => x.GenreName == "Psychology").Take(6).ToArray();
}

<div class="container bg-light">

<!-- Featured Titles (4) -->
    <div class="jumbotron py-5">
        <h1 class="text-center mt-0"><b>Featured Titles</b></h1> <br />
        <div class="row">
            @for (int i = 0; i < 4; i++)
            {
                <div class="col-3">
                    <a href="/Books/ByISBN?role=@genres[0][i].ISBN">
                        <img class="hvr-grow-shadow w-100 h-100" src="~/Images/@genres[0][i].ImagePath" />
                    </a>
                </div>
            }
        </div>
    </div> <hr/>

<!-- Sections by Genre -->
    @for (int x = 1; x < 5; x++)
    {
        <div class="row">
            <div class="col-12">
                <div class="d-flex justify-content-between">
                    <h4 class="mt-1">@genres[x][0].GenreName</h4>
                    <!-- TODO: Make this a Functional Button-->
                    <div id="SeeMore" class="align-self-start btn btn-warning mt-0 text-right font-weight-bold">@Html.ActionLink("See More", "ByGenre", "Books", new { role = @genres[x][0].GenreName }, new { style = "color:black;" })</div>
                </div>
                <div class="row mt-3">
                    @for (int i = 0; i < 6; i++)
                    {
                        <div class="mb-3 col-2">
                            <a href="/Books/ByISBN?role=@genres[x][i].ISBN">
                                <img class="hvr-grow-shadow w-100 h-100" src="~/Images/@genres[x][i].ImagePath" />
                            </a>
                        </div>
                    }
                </div>
                <hr />
            </div>
        </div>
    }
    
    
<!-- Other Genres -->
    <div>
        <h3 style="font-family:Lobster;">Other Genres</h3>

        <h3 style="font-family:Lobster;">
            <div class="row">
                <div class="col-3"> @Html.ActionLink("Fantasy", "ByGenre", "Books", new { role = "Fantasy" }, null) </div>
                <div class="col-3"> @Html.ActionLink("Health and Lifestyle", "ByGenre", "Books", new { role = "Health and Lifestyle" }, null) </div>
                <div class="col-3">@Html.ActionLink("Self-Help", "ByGenre", "Books", new { role = "Self-Help" }, null) </div>
                <div class="col-3"> @Html.ActionLink("Romance", "ByGenre", "Books", new { role = "Romance" }, null)</div>
            </div>
        </h3>
    </div>
</div>